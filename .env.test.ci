#DB
DATABASE_URL=root:test_password@tcp(localhost:3306)/chat_app_test_db

#APP CONFIG
RUN_MODE=test
PORT=8081
CORS_ALLOW_ORIGIN=http://localhost:3001

#MYSQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=test_password
MYSQL_DATABASE=chat_app_test_db
