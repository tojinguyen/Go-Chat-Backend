# App Configuration
RUN_MODE=debug
PORT=8080
CORS_ALLOW_ORIGIN="*"

# MySQL Database
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=your_database
MYSQL_SSL_MODE=disable
MYSQL_MIGRATE_MODE=auto

# JWT Authentication
ACCESS_TOKEN_SECRET_KEY=your_access_token_secret
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_SECRET_KEY=your_refresh_token_secret
REFRESH_TOKEN_EXPIRE_MINUTES=1440

# Login Security
LOGIN_FAIL_LIMIT=5
LOGIN_FAIL_DURATION_MINUTES=30
RESET_PASSWORD_DURATION_HOURS=1
RESEND_REQUEST_RESET_PASSWORD_DURATION_SECONDS=60
SYSTEM_TIME_OUT_SECONDS=60

# Redis Configuration (if needed)
REDIS_URI=localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_USE_SSL=false

# Frontend Configuration
FRONTEND_URI=http://localhost
FRONTEND_PORT=3000

# Legacy config (from current .env file)
DATABASE_URL=root:password@tcp(localhost:3306)/gochat
JWT_SECRET_KEY=your_jwt_secret_key
JWT_EXPIRATION=24